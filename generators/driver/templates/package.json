    "@types/node": "18.14.4",
    "@types/semver": "7.3.13",
    "@types/uuid": "9.0.1",
    "@types/yargs": "17.0.22",
    "gulp": "3.9.1",
    "chai": "4.3.7",
    "chai-spies": "1.0.0",
    "nyc": "15.1.0",
    "mocha": "10.2.0",
    "mocha-junit-reporter": "2.2.0",
    "mocha-lcov-reporter": "1.3.0",
    "tslint": "6.1.3",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "@criticalmanufacturing/connect-iot-common": "release-1010",
    "@criticalmanufacturing/connect-iot-driver": "release-1010",
    "inversify": "6.0.1",
    "moment": "2.29.4",
    "reflect-metadata": "0.1.13",
    "yargs": "17.7.1",
    "uuid": "9.0.0",
    "fs-extra": "11.1.0"
  },
