{
  "name": "<%= packageName %>",
  "version": "<%= packageVersion %>",
  "description": "",
  "main": "src/index.js",
  "typings": "src/index",
  "scripts": {
    "build": "tsc && tsc -p test/unit/",
    "watchPackage": "tsc --preserveWatchOutput -w",
    "watchTests": "tsc -p test/unit --preserveWatchOutput -w",
    "test": "node node_modules/mocha/bin/mocha test/**/*.test.js --timeout 5000 --exit",
    "cover": "node node_modules/istanbul/lib/cli cover node_modules/mocha/bin/_mocha test/**/*.test.js test/*.test.js",
    "vs:buildAndTest": "npm run build && npm run vs:test",
    "vs:test": "node node_modules/nyc/bin/nyc -r cobertura -r lcov -r text-summary mocha test/*.test.js test/**/*.test.js -- --timeout 10000 --exit -R mocha-multi-reporters --reporter-options configFile=mocha-multi-reporters-config.json",
    "pretest": "npm run build",
    "watch": "npm run build -- -w | node node_modules/mocha/bin/mocha --timeout 10000 --exit --reporter min -w test/*.test.js test/**/*.test.js"
  },
  "keywords": [
    "CMF",
    "IoT",
    "Agent"
  ],
  "devDependencies": {
    "@types/chai": "4.3.10",
    "@types/chai-spies": "1.0.6",
    "@types/mocha": "10.0.4",
    "@types/node": "18.14.2",
    "chai": "4.3.10",
    "chai-spies": "1.1.0",
    "nyc": "15.1.0",
    "mocha": "10.2.0",
    "mocha-junit-reporter": "2.2.1",
    "mocha-lcov-reporter": "1.3.0",
    "mocha-multi-reporters": "1.5.1",
    "tslint": "6.1.3",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@criticalmanufacturing/connect-iot-controller-engine": "<%= targetSystemVersionProcessed %>",
    "reflect-metadata": "0.1.13",
    "inversify": "6.0.1",
    "moment": "2.29.4"
  },
  "author": "Critical Manufacturing",
  "criticalManufacturing": {
    "tasksLibrary": {
      "displayName": "<%= identifier %>",
			"dependsOnScope": <%- dependsOnScope %>,
			"mandatoryForScope": <%- mandatoryForScope %>,
			"dependsOnProtocol": <%- dependsOnProtocol %>,
			"mandatoryForProtocol": <%- mandatoryForProtocol %>,
			"metadata": {
        "converters": [],
        "tasks": []
      }
    }
  }
}
